        "lad_friday_afternoon",
        "lad_friday_afternoon::lad_friday_afternoon_1",
        "lad_friday_evening",
        "lad_friday_evening::lad_friday_evening_1",
        "lad_friday_evening::lad_friday_evening_2",
        "nurse",
